<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewAccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepted Cars: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewAcceptedList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewRented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rented Cars: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewRentedList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewWrittenOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Written Off Cars: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewWrittenOffList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
</LinearLayout>
